5. WAP to Implement Singly Linked List with following operations 
a)  Create a linked list. 
b) Deletion of first element, specified element and last element in the list. 
c) Display the contents of the linked list.

#include <stdio.h>
#include <stdlib.h>>

struct node{
     int data;
     struct node *next;
}*head=NULL;
struct node *create(int val){
              struct node *temp;
              temp=(struct node *)malloc(sizeof(struct node));
              temp ->data=val;
              temp->next=NULL;
              return temp;
};

void *insert_beg(int val){
               struct node *temp;
               temp=create(val);
               if(head==NULL){
                   head=temp;
               }
               else{
                    temp->next=head;
                    head=temp;}
}

void del_beg(){
             struct node *temp;
             if(head==NULL){
                printf("Deletion not possible");
             }
             else{
                temp=head;
                head=head->next;
             }
             free(temp);
}

void del_end(){
         struct node *temp1 , *temp2;
         if(head==NULL){
                printf("Deletion not possible");
             }
        else{
            temp1=head;
            while(temp1->next!=NULL){
                temp2=temp1;
                temp1=temp1->next;
            }
            temp2->next=NULL;
            free(temp1);
        }
}

void del_key(int val){
           if(head==NULL){
                printf("Deletion not possible");
                return;
             }
           struct node *temp1=head;
           struct node *temp2=NULL;
           if(temp1!=NULL && temp1->data==val){
               head=temp1->next;
               free(temp1);
               printf("%d deleted",val);
               return;
           }
           while (temp1!=NULL && temp1->data!=val){
               temp2=temp1;
               temp1=temp1->next;
           }
           if(temp1==NULL){
              printf("Ele not in list");
              return;
           }
           temp2->next=temp1->next;
           free(temp1);
           printf("%d deleted",val);
}

void display(){
       struct node *temp;
       if(head==NULL){
        printf("List empty");
       }
       else{
        temp=head;
        printf("elements:");
        while(temp->next!=NULL){
            printf("%d\n",temp->data);
            temp=temp->next;
        }printf("%d",temp->data);
       }
}

void main(){
    int val,choice;
     printf("\n1.Insert\n2.Delete from beginning\n3.Delete from end\n3.Delete val\n5.Display\n6.exit");
    while(1){
            printf("\nEnter choice");
            scanf("%d",&choice);
            switch(choice){
               case 1: printf("Enter val:");
                       scanf("%d",&val);
                       insert_beg(val);
                       break;
                case 2:del_beg();
                       break;
                case 3:del_end();
                       break;
                case 4: printf("Enter val:");
                       scanf("%d",&val);
                       del_key(val);
                       break;
                case 5: display();
                        break;
                case 6: exit(0);
               }
      }
} 
