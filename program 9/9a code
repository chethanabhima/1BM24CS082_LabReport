9a) Write a program to traverse a graph using BFS method.

#include<stdio.h>

int a[10][10], vis[10], n;

void bfs(int v);

void main() {
    int i, j, src;

    printf("No. of vertices: ");
    scanf("%d", &n);

    printf("Enter adjacency matrix:\n");
    for(i = 1; i <= n; i++) {
        for(j = 1; j <= n; j++) {
            scanf("%d", &a[i][j]);
        }
        vis[i] = 0;
    }

    printf("Enter the src vertex: ");
    scanf("%d", &src);

    printf("Nodes reachable from src vertex:\n");
    bfs(src);
}

void bfs(int v) {
    int q[10], f = 1, r = 1, u, i;

    q[r] = v;
    vis[v] = 1;

    while(f <= r) {
        u = q[f];
        printf("%d ", u);

        for(i = 1; i <= n; i++) {
            if(a[u][i] == 1 && vis[i] == 0) {
                vis[i] = 1;
                q[++r] = i;
            }
        }
        f++;
    }
}
